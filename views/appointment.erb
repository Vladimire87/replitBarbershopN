   <h3>Appointment:</h2>
<script type="text/javascript">
  $(function(){
    $('#color').simplecolorpicker();
    $('#datetimepicker').datetimepicker();
  });
</script>
<form action="/appointment" method="post">
  <div class="form-group">
    <label for="username">Ваше Имя:</label>
    <input type="text"  name="client[name]" class="form-control" placeholder="Ваше Имя" value="<%= @username %>">
  </div>
  <div class="form-group">
    <label for="tel">Ваш Телефон:</label>
    <input type="tel"  name="client[phone]" class="form-control" placeholder="Телефон" value="<%= @tel %>">
  </div>
  <div class="form-group">
    <label for="date">Дата:</label>
    <input id="datetimepicker" type="text"  name="client[datestamp]" class="form-control" placeholder="Дата" value="<%= @date %>">
  </div>
  <div class="form-group">
    <label for="pet-select">Выберите Барбера:</label>
    <select id="aaa" name="client[barber]" class="form-control" >
      <option value="">--Please choose an option--</option>
      <% @barbers.each do |barber| %>
        <option value="<%= barber.name %>" <%= barber.name == @barber ? 'selected' : '' %>>
    <%= barber.name %>
  </option>
        <% end %>
      </select>
    </div>
    <div class="form-group">
      <label for="color">Выберите Цвет:</label><br>
      <select id="color" name="client[color]" class="form-control">
        <option value="#7bd148">Green</option>
        <option value="#5484ed">Bold blue</option>
        <option value="#a4bdfc">Blue</option>
        <option value="#46d6db">Turquoise</option>
        <option value="#7ae7bf">Light green</option>
        <option value="#51b749">Bold green</option>
        <option value="#fbd75b">Yellow</option>
        <option value="#ffb878">Orange</option>
        <option value="#ff887c">Red</option>
        <option value="#dc2127">Bold red</option>
        <option value="#dbadff">Purple</option>
        <option value="#e1e1e1">Gray</option>
      </select>
    </div>
    <button type="submit" class="btn btn-primary">Записаться</button>
  </form>
